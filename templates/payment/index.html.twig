{% extends 'base.html.twig' %}

{% block title %}Payment index
{% endblock %}

{% block body %}
	<main id="main" class="main ">
		<h1>Payment index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>

					<th>Amount</th>
					<th>CreatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for payment in payments %}
					<tr>
						<td>{{ payment.id }}</td>

						<td>{{ payment.amount }}</td>
						<td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_payment_show', {'id': payment.id}) }}" class="btn btn-info btn-sm">show</a>
							{# <a href="{{ path('app_payment_edit', {'id': payment.id}) }}" class="btn btn-warning btn-sm">edit</a> #}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4" class="btn btn-primary">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# <a href="{{ path('app_payment_new') }}" class="btn btn-primary">Create new</a> #}
	{% endblock %}
