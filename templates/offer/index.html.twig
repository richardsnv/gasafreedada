		<script>
			// Lorsque le modal est ouvert, on met à jour son contenu avec les données des cartes
            var modal = document.getElementById('exampleModal');
            modal.addEventListener('show.bs.modal', function (event) { // On récupère l'élément (la carte) qui a été cliqué
            var button = event.relatedTarget;

            // Récupère le titre et le prix des données de la carte
            var title = button.getAttribute('data-title');
            var price = button.getAttribute('data-price');
            var offerId = button.getAttribute('data-offerId');

            // On cible les éléments dans le modal où les données seront injectées
            var modalTitle = modal.querySelector('.modal-title');
            var modalBodyTitle = modal.querySelector('#modal-title');
            var modalBodyPrice = modal.querySelector('#modal-price');
            var offerIdInput = modal.querySelector('#offerId');


            // On met à jour le modal avec les données de la carte
            modalTitle.textContent = 'Détails de l\'offre';
            modalBodyTitle.textContent = title;
            modalBodyPrice.textContent = price;
            offerIdInput.value = offerId;
            });
		</script>


