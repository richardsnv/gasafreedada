{% extends 'base.html.twig' %}

{% block title %}Account index
{% endblock %}

{% block body %}
	<main id="main" class="main ">
		<h1>Account index</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Momo Number</th>
					<th scope="col">Account type</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for account in accounts %}
					<tr class="table">
						<th scope="row">{{ account.id }}</th>
						<td>{{ account.momoNumber }}</td>
						<td>{{ account.type }}</td>
						{# <td>Column content</td> #}
						<td>
							<a href="{{ path('app_account_show', {'id': account.id}) }}" class="btn btn-info btn-sm" >show</a>
							<a href="{{ path('app_account_edit', {'id': account.id}) }}" class="btn btn-warning btn-sm">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_account_new') }}" class="btn btn-primary">Create new</a>
	</main>
{% endblock %}
